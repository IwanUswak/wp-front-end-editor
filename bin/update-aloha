#!/bin/bash

if [ $# -lt 1 ]; then
	echo "usage: $(basename $0) 1.2.3"
	exit
fi

name=alohaeditor-$1

#wget https://github.com/downloads/alohaeditor/Aloha-Editor/$name.zip -O /tmp/$zip_name

rm -rf /tmp/aloha-package
mkdir /tmp/aloha-package

cd /tmp/aloha-package
unzip /tmp/$name.zip
cd -

rm lib/aloha-editor -rf
mv /tmp/aloha-package/$name/aloha lib/aloha-editor

find lib/aloha-editor -name '*.php' -delete
find lib/aloha-editor -path '*/demo' | xargs rm -rf
